{
	"name": "__MSG_application_title__",
	"description": "__MSG_application_description__",
	"version": "1.0",
	"homepage_url": "https://verifypdf.com",  
	"default_locale": "de",
	"author": "Manuel Scholz",
	"background": {
		"pages": ["background.html"],
		"scripts": ["jquery/jquery.min.js", "background.js"]
	},
	"icons": {
		"16": "images/16x16_gruen.png",
        "48": "images/48x48.png",
        "128": "images/128x128.png"
	},
	"browser_action": {
		"default_name": "VerifyPDF",
		"default_popup" : "background.html"
	},
	"web_accessible_resources": [
		"images/16x16_green.png",
		"images/16x16_red.png",
		"images/16x16_orange.png",
		"images/16x16_grey.png",
		"images/loading.gif"
	],
	"content_scripts": [ {
		"js": [ "jquery/jquery.min.js", "event.js" ],
		"css" : ["css/style.css"],
		"matches": [ "http://*/*", "https://*/*"]
	}],
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"manifest_version": 2
}
